<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        {% if title %}
        <title>{{ title }} - Flask project</title>
        {% else %}
        <title>Hello, world!</title>
        {% endif %}
        <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    </head>
    <body>

        {% block content %}

        {% endblock %}

        {% with messages = get_flashed_messages() %}
            {% if messages %}
            <ul id="messages-list">
                {% for message in messages %}
                <li class="message">{{ message }}</li>
                {% endfor %}
            </ul>
            {% endif %}
        {% endwith %}
    </body>
</html>