{% extends "base.jinja2" %}

{% block content %}
    <div class="form-wrapper">
        <form action="" method="post" class="auth" id="login-form">
            <h1>Sign In</h1>
            {{ form.hidden_tag() }}
            <p class="username">
                {{ form.username.label }}
                {% for error in form.username.errors %}
                    <span style="color: red">[{{ error }}]</span>
                {% endfor %}<br>
                {{ form.username(size=32) }}
            </p>
            <p class="password">
                {{ form.password.label }}
                {% for error in form.password.errors %}
                    <span style="color: red">[{{ error }}]</span>
                {% endfor %}<br>
                {{ form.password(size=32) }}
            </p>
            <p class="remember">{{ form.remember_me() }} {{ form.remember_me.label }}</p>
            <p class="redirect">New User?&emsp;&emsp;&emsp;<a href="{{ url_for('auth.register') }}"> Click here to
                Register!</a></p>
            <p class="reset-pwd">
                Forgot your password?&emsp;&emsp;
                <a href="{{ url_for('auth.reset_password_request') }}">Click here to reset it.</a>
            </p>
            <p class="form-button">{{ form.submit() }}</p>
        </form>
    </div>
{% endblock %}