{% extends "base.jinja2" %}

{% block content %}
    {% include "_nav.jinja2" %}
    <div class="form-wrapper">
        <form action="" method="post" class="auth" id="edit-form">
            <h1>Edit Profile</h1>
            {{ form.hidden_tag() }}
            <p class="username">
                {{ form.username.label }}<br>
                {{ form.username(size=32) }}
                {% for error in form.username.errors %}
                    <span style="color: red">[{{ error }}]</span>
                {% endfor %}
            </p>
            <p class="about-me">
                {{ form.about_me.label }}<br>
                {{ form.about_me(cols=50, rows=4) }}
                {% for error in form.about_me.errors %}
                    <span style="color: red">[{{ error }}]</span>
                {% endfor %}
            </p>
            <p class="form-button">{{ form.submit() }}</p>
        </form>
    </div>
{% endblock %}