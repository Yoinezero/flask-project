{% extends "base.jinja2" %}

{% block content %}
    {% include "_nav.jinja2" %}
    <img src="{{ user.avatar(128) }}" alt="{{ user.username }}_avatar">
    <h1>User: {{ user.username }}</h1>
    {% if user.about_me %}
        <p>{{ user.about_me }}</p>
    {% endif %}
    {% if user.last_seen %}
        <p>Last seen on: {{ user.last_seen }}</p>
    {% endif %}
    {% if user == current_user %}
        <p><a href="{{ url_for('edit_profile') }}">Edit your profile</a></p>
    {% endif %}
    <hr>
    {% for post in posts %}
        {% include "_post.jinja2" %}
    {% endfor %}
{% endblock %}