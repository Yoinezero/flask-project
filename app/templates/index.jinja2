{% extends "base.jinja2" %}

{% block content %}

    {% include "nav.jinja2" %}

    <h1>Hello, {{ current_user.username }}</h1>

    {% for post in posts %}
        <div>
            <p>
                {{ post.author.username }} says: <b>{{ post.body }}</b>
            </p>
        </div>
    {% endfor %}
{% endblock %}