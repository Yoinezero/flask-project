{% extends "base.jinja2" %}

{% block content %}
    <div class="form-wrapper">
        <form action="" method="post" class="auth" id="reset-request-form">
            <h1>Reset Password</h1>
            {{ form.hidden_tag() }}
            <p class="username email">
                {{ form.email.label }}<br>
                {{ form.email(size=64) }}
                {% for error in form.email.errors %}
                    <span style="color: red">[{{ error }}]</span>
                {% endfor %}
            </p>
            <p class="form-button">{{ form.submit() }}</p>
        </form>
    </div>
{% endblock %}